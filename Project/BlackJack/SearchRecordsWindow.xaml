<Window x:Class="BlackJack.SearchRecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="SearchRecordsWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="41,71,0,0" Click="btnSearch_Click"/>
        <TextBox x:Name="TxtBxSearchName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="158,80,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="41,201,0,0" FontSize="16"><Run Text="Record Info:"/></TextBlock>
        <TextBlock x:Name="txtBlRecordFile" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Unknown" VerticalAlignment="Top" Margin="41,227,0,0" FontSize="16"/>
        <ListBox x:Name="lstBxRecords" HorizontalAlignment="Left" Height="241" VerticalAlignment="Top" Width="318" Margin="428,122,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="All Records:" VerticalAlignment="Top" Margin="428,86,0,0" FontSize="16"/>

    </Grid>
</Window>
